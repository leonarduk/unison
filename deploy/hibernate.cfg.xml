<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="CodeGen">
        <property name="hibernate.connection.driver_class">
            org.hsqldb.jdbcDriver
        </property>
        <property name="hibernate.connection.url">
            jdbc:hsqldb:file:DB/projectDB
        </property>
        <property name="hibernate.connection.username">SA</property>
        <property name="hibernate.dialect">
            org.hibernate.dialect.HSQLDialect
        </property>
        <property name="hibernate.cache.provider_class">
            org.hibernate.cache.NoCacheProvider
        </property>


        <property name="hibernate.cache.use_query_cache">false</property>
        <property name="hibernate.cache.use_second_level_cache">
            false
        </property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="hibernate.connection.pool_size">20</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">false</property>
        <mapping
                resource="uk/co/sleonard/unison/datahandling/DAO/Topic.hbm.xml"/>
        <mapping
                resource="uk/co/sleonard/unison/datahandling/DAO/NewsGroup.hbm.xml"/>
        <mapping
                resource="uk/co/sleonard/unison/datahandling/DAO/Message.hbm.xml"/>
        <mapping class="uk.co.sleonard.unison.datahandling.DAO.UsenetUser"/>
        <mapping
                resource="uk/co/sleonard/unison/datahandling/DAO/Location.hbm.xml"/>
        <mapping
                resource="uk/co/sleonard/unison/datahandling/DAO/IpAddress.hbm.xml"/>

    </session-factory>
</hibernate-configuration>

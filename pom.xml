        <!-- <dependency> <groupId>gnu.classpath.ext</groupId> <artifactId>inetlib</artifactId>
            <version>1.1.1</version> </dependency> -->

        <dependency>
            <groupId>jung</groupId>
            <artifactId>jung</artifactId>

<AnchorPane prefHeight="391.0" prefWidth="615.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.co.sleonard.unison.gui.DownloadNewsPanelFX">
   <children>
      <TextField fx:id="newsGroupField" layoutX="96.0" layoutY="9.0" prefHeight="25.0" prefWidth="179.0">
         <tooltip>
            <Tooltip text="Type in full or part name (use * for wild character, e.g. *senior* for all groups with \&quot;senior\&quot; in the name)" />
         </tooltip>
      </TextField>
      <ComboBox fx:id="hostCombo" layoutX="96.0" layoutY="55.0" prefHeight="25.0" prefWidth="178.0">
         <tooltip>
            <Tooltip text="Look at http://freeusenetnews.com/newspage.html?sortby=articles for other hosts if these are broken. Can enter name here." />
         </tooltip>
      </ComboBox>
      <Label layoutX="14.0" layoutY="11.0" text="Newsgroup">
         <font>
            <Font size="14.0" />
         </font>
         <tooltip>
            <Tooltip text="Type in full or part name (use * for wild character, e.g. *senior* for all groups with \&quot;senior\&quot; in the name)" />
         </tooltip>
      </Label>
      <Label layoutX="14.0" layoutY="57.0" text="Server">
         <font>
            <Font size="14.0" />
         </font>
         <tooltip>
            <Tooltip text="Look at http://freeusenetnews.com/newspage.html?sortby=articles for other hosts if these are broken. Can enter name here." />
         </tooltip>
      </Label>
      <Separator layoutX="285.0" layoutY="-1.0" orientation="VERTICAL" prefHeight="407.0" prefWidth="0.0" />
      <ListView fx:id="availableNewsgroups" layoutX="14.0" layoutY="95.0" prefHeight="294.0" prefWidth="260.0">
         <tooltip>
            <Tooltip text="The number in brackets is an estimate (provided by the server) which is likely to be higher than actual number of messages as many messages are deleted." />
         </tooltip>
      </ListView>
      <TextArea fx:id="notesArea" editable="false" layoutX="408.0" layoutY="6.0" prefHeight="384.0" prefWidth="200.0">
         <tooltip>
            <Tooltip text="Empty Tooltip" />
         </tooltip>
      </TextArea>
      <Button fx:id="findButton" layoutX="297.0" layoutY="7.0" mnemonicParsing="false" onAction="#findGroups" prefHeight="31.0" prefWidth="100.0" text="Find Groups">
         <tooltip>
            <Tooltip text="Enter name or part name (* for wild chararcter) the n click here" />
         </tooltip>
      </Button>
      <CheckBox fx:id="getLocationCheck" disable="true" layoutX="297.0" layoutY="78.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="101.0" text="Get Extras">
         <font>
            <Font size="14.0" />
         </font>
         <tooltip>
            <Tooltip text="Downloads Location &amp; Crossposts" />
         </tooltip>
      </CheckBox>
      <Label fx:id="fromDateLabel" disable="true" layoutX="297.0" layoutY="131.0" text="Date From">
         <tooltip>
            <Tooltip text="In YYYYMMDD format eg 20071201" />
         </tooltip>
      </Label>
      <TextField fx:id="fromDateField" disable="true" layoutX="297.0" layoutY="148.0" prefHeight="25.0" prefWidth="100.0">
         <tooltip>
            <Tooltip text="In YYYYMMDD format eg 20071201" />
         </tooltip>
      </TextField>
      <Label fx:id="toDateLabel" disable="true" layoutX="297.0" layoutY="184.0" text="Date To">
         <tooltip>
            <Tooltip text="In YYYYMMDD format eg 20071201" />
         </tooltip>
      </Label>
      <TextField fx:id="toDateField" disable="true" layoutX="297.0" layoutY="203.0" prefHeight="25.0" prefWidth="100.0">
         <tooltip>
            <Tooltip text="In YYYYMMDD format eg 20071201" />
         </tooltip>
      </TextField>
      <Button fx:id="downloadButton" disable="true" layoutX="297.0" layoutY="275.0" mnemonicParsing="false" onAction="#downloadButton" prefHeight="31.0" prefWidth="100.0" text="Download" />
      <Button fx:id="pauseButton" disable="true" layoutX="297.0" layoutY="315.0" mnemonicParsing="false" onAction="#pauseButton" prefHeight="31.0" prefWidth="100.0" text="Pause" />
      <Button fx:id="cancelButton" disable="true" layoutX="297.0" layoutY="355.0" mnemonicParsing="false" onAction="#cancelButton" prefHeight="31.0" prefWidth="100.0" text="Cancel" />
   </children>
</AnchorPane>

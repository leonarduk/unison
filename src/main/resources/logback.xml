<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36}:%line -%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.hibernate" level="WARN"/>

  <root level="DEBUG">
    <appender-ref ref="CONSOLE" />
  </root>
</configuration>
